<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/no_variable_mark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/fragment_look_text_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/no_variables_header_one"
            android:textColor="@color/actionbar_title_color"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/fragment_look_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_look_text_heading"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="@string/no_variables_header_two"
            android:textColor="@color/actionbar_title_color"
            android:textSize="30sp" />
    </RelativeLayout>

    <include
        android:id="@+id/bottom_bar"
        layout="@layout/bottom_bar" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/debug_variables_activity_expandable_listview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/bottom_bar"/>

</RelativeLayout>
